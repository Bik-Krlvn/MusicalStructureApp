<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_text_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_8dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="menu_card_style" parent="CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginStart">@dimen/marginStart_8dp</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd_8dp</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom_8dp</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="menu_image_view_style">
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>
